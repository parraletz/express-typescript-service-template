# Environment (development, production, test)
NODE_ENV=development

# Server configuration
PORT=3000
API_PREFIX=/api

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging configuration
# Set to 'true' if running in a container (logs to stdout only)
# Set to 'false' if running on a server (logs to files and stdout)
IS_CONTAINERIZED=true

# Path where logs will be stored (only used if IS_CONTAINERIZED=false)
LOG_PATH=./logs 